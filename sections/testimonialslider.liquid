<div id="testimonials" class="padding-global"><div class="container-large"><div class="padding-section-large"><div class="testimonial24_component"><div class="margin-bottom margin-xhuge"><div class="text-align-center"><div class="max-width-medium align-center"><div class="settings-schema w-embed"></div>
<div class="margin-bottom margin-small"><h2 li-object="section.settings.testimonials_heading_text" class="heading-style-h2">{{ section.settings.testimonials_heading_text }}</h2></div><div class="richtext-wrapper is-center text-size-medium w-richtext"><p li-object="section.settings.testimonials_paragraph_text">{{ section.settings.testimonials_paragraph_text }}</p></div></div></div></div><div data-delay="4000" data-animation="slide" class="testimonial24_slider w-slider" data-autoplay="false" data-easing="ease" data-hide-arrows="false" data-disable-swipe="false" data-autoplay-limit="0" data-nav-spacing="3" data-duration="500" data-infinite="true"><div class="w-embed"><style>/* Card Background Color */
.testimonial24_slide:nth-child(3n+1) .testimonial24_card {
  background-color: var(--background-color--background-secondary);
  top: 0rem;
}
.testimonial24_slide:nth-child(3n+2) .testimonial24_card {
  background-color: var(--background-color--background-tertiary);
  top: -4rem;
}
.testimonial24_slide:nth-child(3n+3) .testimonial24_card {
  background-color: var(--background-color--background-quaternary);
  top: -2rem;
}
/* Client Image Wrapper Flex Direction and Alignment */
.testimonial24_slide:nth-child(3n+1) .testimonial24_client-image-wrapper {
	flex-flow: row-reverse;
  justify-content: flex-start;
  align-items: stretch;
}
.testimonial24_slide:nth-child(3n+2) .testimonial24_client-image-wrapper {
  flex-flow: row;
  justify-content: flex-start;
  align-items: stretch;
}
.testimonial24_slide:nth-child(3n+3) .testimonial24_client-image-wrapper {
  flex-flow: row-reverse;
  justify-content: flex-start;
  align-items: stretch;
}
/* Customer Image & Name Rotations */
.testimonial24_slide:nth-child(3n+1) .testimonial24_customer-image, .testimonial24_slide:nth-child(3n+1) .testimonial24_client-info {
  transform: rotate(9deg);
}
.testimonial24_slide:nth-child(3n+2) .testimonial24_customer-image, .testimonial24_slide:nth-child(3n+2) .testimonial24_client-info {
  transform: rotate(-9deg);
}
.testimonial24_slide:nth-child(3n+3) .testimonial24_customer-image, .testimonial24_slide:nth-child(3n+3) .testimonial24_client-info {
  transform: rotate(9deg);
}
/* Client Name Flex Direction */
.testimonial24_slide:nth-child(3n+1) .testimonial24_client {
	flex-flow: row;
}
.testimonial24_slide:nth-child(3n+2) .testimonial24_client {
	flex-flow: row-reverse;
}
.testimonial24_slide:nth-child(3n+3) .testimonial24_client {
	flex-flow: row;
}
</style></div><div class="testimonial24_mask w-slider-mask">{% for testimonials in metaobjects.testimonials.values %}    <div li-for="testimonials in metaobjects.testimonials.values" class="testimonial24_slide w-slide">
                                    
